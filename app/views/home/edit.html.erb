<h1>Home#edit</h1>
<h2>강의 수정하기</h2>
<p>Find me in app/views/home/edit.html.erb</p>

<div class="container">
    <form action="/home/update/<%=@lecture.id %>" method="POST">
      <div class="form-group">
        <label for="InputLectureName">강의명</label>
        <input type="text" name="name" value="<%=@lecture.name %>" class="form-control" id="InputLectureName" placeholder="강의명을 입력하세요">
      </div>
      <div class="form-group">
        <label for="InputLectureMajor">전공</label>
        <input type="text" name="major" value="<%=@lecture.major %>" class="form-control" id="InputLectureMajor" placeholder="전공을 입력하세요">
      </div>
      <div class="form-group">
        <label for="InputLectureProfessor">담당교수</label>
        <input type="text" name="professor" value="<%=@lecture.professor %>"class="form-control" id="exampleInputProfessor" placeholder="담당교수를 입력하세요">
      </div>
      <div class="form-group">
        <label for="InputLectureContent">강의내용</label>
        <textarea class="form-control" name="content" id="InputLectureContent" rows="7"><%=@lecture.content %></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>